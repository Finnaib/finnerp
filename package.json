{
  "name": "finn-erp",
  "version": "1.0.0",
  "description": "Finn ERP Desktop Application",
  "author": "Finn ERP",
  "main": "electron.js",
  "homepage": ".",
  "private": true,
  "dependencies": {
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "electron-serve": "^3.0.1",
    "exceljs": "^4.4.0",
    "file-saver": "^2.0.5",
    "firebase": "^12.6.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder build --win --publish never"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "electron-is-dev": "^3.0.1",
    "electron-packager": "^17.1.2",
    "electron-winstaller": "^5.4.0",
    "innosetup-compiler": "^6.3.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.finnerp.app",
    "productName": "FinnERP",
    "copyright": "Copyright Â© 2024 Finn ERP",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "build/logo512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FinnERP",
      "installerIcon": "build/logo512.png",
      "uninstallerIcon": "build/logo512.png",
      "uninstallDisplayName": "FinnERP",
      "runAfterFinish": true
    },
    "files": [
      "build/**/*",
      "electron.js",
      "package.json"
    ],
    "extends": null
  }
}
